  //lecture fichier md
  
 public static ArrayList<String>fichierLecture(){
     
      ArrayList<String> tabString=new ArrayList();
      String line="";
        
    try {
      
      FileReader file = new FileReader("D:\\mdSyntax.md");
      BufferedReader buffer = new BufferedReader(file);
     
          //lecture fichier
           while((line = buffer.readLine()) != null)
      {
           tabString.add(line);
      }
    
    } catch (IOException ex) {
       ex.printStackTrace();
    }
    return tabString;
 }
 //recuperer intitule
 
 public static ArrayList<String> intituleQuestion(){
    ArrayList<String> tabString=new ArrayList();
    tabString= fichierLecture();
    ArrayList<String> intitule=new ArrayList();
   for(int i=0;i<tabString.size();i++){
       if(tabString.get(i).charAt(0)=='#') intitule.add(tabString.get(i).substring(3));
   }
    return intitule;
 }
 //recuperer proposition
 
 public static ArrayList<String> propositionQuestion(){
    ArrayList<String> tabString=new ArrayList();
    tabString= fichierLecture();
    ArrayList<String> pp=new ArrayList();
   for(int i=1;i<tabString.size();i++){
     
     pp.add(tabString.get(i));
   }
      
   }
    return pp;
 }
 
 
 
 
   public MarkdownForm(){
     
